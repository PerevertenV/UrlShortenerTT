@using UrlShortener.Service
@model string

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-black py-2">About UrlShortener</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Index" asp-controller="Home">
            <div class="mb-3">
                <textarea id="largeText" name="text" class="form-control custom-textarea"
                          style="font-family: 'Courier New', sans-serif; font-size: 16px; height: 300px;"
                @(User.IsInRole(StaticData.RoleAdmin) ? "" : "disabled")>@Model</textarea>
            </div>

            @if (User.IsInRole(StaticData.RoleAdmin))
            {
                <button type="submit" class="btn btn-primary">Save</button>
            }
        </form>
    </div>
</div>


