@model UserModel
<div style="display: flex; justify-content: center;">
    <div class="card shadow border-0 mt-2 col-4">
        <div class="card-header ml-0 bg-black py-2">
            <div class="row">
                <div class="col text-center">
                    <h2 class="py-2 text-white">Login</h2>
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row pt-3">
                <div class="col">
                    <form asp-area="Customer" asp-controller="Login" asp-action="Index" method="post" class="row">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Login" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Login">User name</label>
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" class="form-control" aria-required="true" placeholder="" />
                            <label asp-for="Password">Password</label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <button id="loginSubmit" type="submit" class="btn bg-black text-white w-100">Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}